---
import Layout from '../../layouts/Layout.astro';
import { getBreedBySlug } from '../../api/breed.api';
import type { Breed } from '../../model/breed.model';
import { marked } from 'marked';
import type { APIRoute } from 'astro';

export const prerender = false;

const { slug } = Astro.params;
const breed = await getBreedBySlug(slug ?? "");

const descriptionHtml = await marked(breed.description);
---

<Layout title={breed.name}>
  <div class="max-w-4xl mx-auto">
    <a href="/" class="btn btn-ghost mb-6">‚Üê Back to all breeds</a>
    
    <div class="card bg-base-100 shadow-xl">
      <figure>
        <img 
          src={breed.photo.url} 
          alt={breed.name}
          class="w-full h-110 object-contain bg-base-200"
        />
      </figure>
      <div class="card-body">
        <h1 class="card-title text-4xl mb-4">{breed.name}</h1>
        <div class="prose prose-lg max-w-none" set:html={descriptionHtml}>
        </div>
      </div>
    </div>
  </div>
</Layout>
